@model Ecommerce.Models.Ordine

<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal containerDetails  fw-bold w-50">
        <div class="greenBG containerTitle w-100 mb-0">
            <h4><a href="/Ordini/Index" class="generalBtn"><i class="fa-solid fa-arrow-left"></i></a> Modifica Ordine</h4>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdOrdine)
            @Html.HiddenFor(model => model.IdCliente)
            @Html.HiddenFor(model => model.IdCarrello)

            <div class="form-group">
                @Html.LabelFor(model => model.IdMetodoPagamento, "IdMetodoPagamento", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdMetodoPagamento", (SelectList)ViewBag.Metodi, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdMetodoPagamento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdIndirizzoSpedizione, "IdIndirizzoSpedizione", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdIndirizzoSpedizione", (SelectList)ViewBag.Indirizzi, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdIndirizzoSpedizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataOrdine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataOrdine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataOrdine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdMetodoSpedizione, "IdMetodoSpedizione", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdMetodoSpedizione", (SelectList)ViewBag.MetodiSpedizione, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdMetodoSpedizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotaleOrdine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotaleOrdine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TotaleOrdine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="generalBtn my-4" />
                </div>
            </div>
        </div>
        }
</center>
