@model Ecommerce.Models.Prodotto

@{
    ViewBag.Title = "Edit";
}

<center>

    @using (Html.BeginForm("Edit", "Prodotti", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal containerDetails fw-bold w-50">
        <div class="greenBG containerTitle w-100 mb-0">
            <h4><a href="/Prodotti/ProdottiAdmin" class="generalBtn"><i class="fa-solid fa-arrow-left"></i></a> Modifica prodotto</h4>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdProdotto)
            @Html.HiddenFor(model => model.FotoUrl)
            @Html.HiddenFor(model => model.Promozione)
            <div class="row pe-5">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeProdotto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NomeProdotto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NomeProdotto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PrezzoPrecedente, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PrezzoPrecedente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PrezzoPrecedente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdCategoria, "IdCategoria", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdCategoria", (SelectList)ViewBag.IdCategoria, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Photo, new { @class = "form-control", @type = "file", @accept = "image/*" })
                            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QtStock, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.QtStock, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.QtStock, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Descrizione, new { @class = "form-control", style = "width: 500px; height: 330px" })
                            @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="generalBtn my-4" />
                </div>
            </div>
        </div>
        }
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
